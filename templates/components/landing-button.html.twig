{% macro landingLink(route, text) %}
<a
    href="{{ route }}"
    class="underline py-2 px-4 text-4xl text-blue-700 font-semibold rounded-lg hover:shadow-md hover:bg-linen-dark focus:bg-linen-dark focus:ring-2 focus:ring-blue focus:ring-opacity-75"
>{{ text }}</a>
{% endmacro %}

{% macro externalLink(route, text) %}
<a
    href="{{ route }}" target="_blank"
    class="underline text-blue-700 focus:ring-2 focus:ring-blue focus:ring-opacity-75"
>{{ text }}</a>
{% endmacro %}